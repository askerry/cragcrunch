    <script>

    			function wait(name){
	    			$('#content').empty();
					$('#bub2').css("visibility", "visible").css("width","100%").css("height","800px").css("padding-top","5em").css("background-color","white");
				};

    			function checkusername(name){
    					if (name!=null){
    					$.ajax({
					      type: 'GET',
					      url: '/checkavailability', // This is the url that will be requested
					      data: {desiredname:name},
					      success: acceptreject,
					      dataType: 'JSON'
					    });};
    			};
    			function acceptreject(data){  
    				exists=data['exists'] 
    				name=data['name']
    				if (exists==true) {
    					bootbox.prompt("User name "+name+" is taken or invalid. Please provide a new name.", checkusername);
    				}
    				else
    				{
    					gotosetuppage(name)
    				}
				};  
    			function gotosetuppage(name){
    				window.location.replace("/newuser/"+name);
    			};
    			function getnewuser(){
					bootbox.prompt("Welcome to CragCrunch! Please enter a user name.", checkusername);
				};
				function go2user(){
					var userid = $('#userdropdown').val()
    				window.location.replace("/user/"+userid.toString());
				};
				function donothing(data){
					console.log('no change')
				};

				function submitstars(){
					$.ajax({
					      type: 'GET',
					      url: '/logstar', // This is the url that will be requested
					      data: {starsscore:$('#starsscore').val(), climber:$('#climber').val(), climbername:$('#climbername').val(), climb:$('#climb').val(), climbname:$('#climbname').val()},
					      success: donothing,
					      dataType: 'JSON'
					    });
				};

			$(document).ready(function(){

